<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up_activity"
    android:background="@drawable/welcome_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/lite_black">

        <TextView
            android:id="@+id/textview_register_head"
            android:layout_width="361dp"
            android:layout_height="120dp"
            android:background="@drawable/border"
            android:backgroundTint="#95260B5F"
            android:gravity="center"
            android:text="Enter Your Details to \nRegister on the App"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="35sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_full_name"
            android:layout_below="@id/textview_register_head"
            android:text="Full Name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="374dp"
            android:layout_height="55dp"
            android:id="@+id/editText_register_full_name"
            android:hint="Name*"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:layout_below="@id/textview_register_full_name"
            android:background="@drawable/input_bg"
            android:backgroundTint="#30F1F1F4"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_email"
            android:layout_below="@id/editText_register_full_name"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="374dp"
            android:layout_height="55dp"
            android:id="@+id/editText_register_email"
            android:hint="Email*"
            android:drawableLeft="@drawable/baseline_mail_outline_24"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@id/textview_register_email"
            android:background="@drawable/input_bg"
            android:backgroundTint="#30F1F1F4"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_dob"
            android:layout_below="@id/editText_register_email"
            android:text="Date of Birth"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editText_register_dob"
            android:layout_width="374dp"
            android:layout_height="55dp"
            android:layout_below="@id/textview_register_dob"
            android:background="@drawable/input_bg"
            android:backgroundTint="#30F1F1F4"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:hint="dd/mm//yyyy"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_gender"
            android:layout_below="@id/editText_register_dob"
            android:text="Gender"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/textview_register_gender"
            android:id="@+id/radio_group_register_gender">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_female"
                android:text="Female"
                android:textSize="15sp"
                android:buttonTint="@color/white"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_male"
                android:text="Male"
                android:textSize="15sp"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"/>

        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_mobile"
            android:layout_below="@id/radio_group_register_gender"
            android:text="Phone Number"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editText_register_mobile"
            android:layout_width="374dp"
            android:layout_height="55dp"
            android:layout_below="@id/textView_register_mobile"
            android:background="@drawable/input_bg"
            android:backgroundTint="#30F1F1F4"
            android:drawableLeft="@android:drawable/stat_sys_phone_call"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:hint="01*********"
            android:inputType="phone"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_password"
            android:layout_below="@id/editText_register_mobile"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="374dp"
            android:layout_height="55dp"
            android:id="@+id/editText_register_password"
            android:hint="abcd12!@"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@id/textView_register_password"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawableRight="@drawable/baseline_eye_24"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="#30F1F1F4"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_confirm_password"
            android:layout_below="@id/editText_register_password"
            android:text="Confirm Password"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="374dp"
            android:layout_height="55dp"
            android:id="@+id/editText_register_confirm_password"
            android:hint="abcd12!@"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="6dp"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawableRight="@drawable/baseline_eye_24"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="10dp"
            android:layout_below="@id/textView_register_confirm_password"
            android:background="@drawable/input_bg"
            android:backgroundTint="#30F1F1F4"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_role"
            android:layout_below="@+id/editText_register_confirm_password"
            android:text="SignUp As"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textview_register_role"
            android:id="@+id/radio_group_register_role">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_entrepreneur"
                android:text="Entrepreneur"
                android:textSize="15sp"
                android:buttonTint="@color/white"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_investor"
                android:text="Investor"
                android:textSize="15sp"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"/>

        </RadioGroup>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="50dp"
            android:id="@+id/reg_btn"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            android:layout_below="@+id/radio_group_register_role"
            android:layout_marginBottom="50dp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:progressBackgroundTint="@color/purple_700"
            android:visibility="gone"/>
    </RelativeLayout>

</ScrollView>